                <form id="form" action="/users/crear_cuenta" method="POST" >
                    <br>
                    <input class="formulario" type="text" placeholder="Nombre" name="name" id="nombre"> </input>
                    <% if (locals && locals.errors) { %>
                        <% errors.forEach(error => { %>
                        <% if (error.param=="name") { %>
                          <h3> <%= error.msg%>  </h3> 
                        <% } %>
                      <% }) %> 
                    <% } %> 
                    <br>
                    <input class="formulario" type="text" placeholder="Apellido" name="lastName" id="nombre"> </input>
                    <% if (locals && locals.errors) { %>
                        <% errors.forEach(error => { %>
                        <% if (error.param=="lastName") { %>
                          <h5> <%= error.msg%>  </h5> 
                        <% } %>
                      <% }) %> 
                    <% } %> 
                    <br>
                    <input class="formulario" type="text" placeholder="Email" name="email" id="email"> </input>
