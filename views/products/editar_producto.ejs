<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
    <%- include('../partials/head') %>   
</head>

<body>
        <header id="header">
        <%- include('../partials/header') %>        
        </header>

        <h2>holaholaholaholahola</h2>

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Estás editando: <i><%=ProductoaEditar.name %></i></h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/productsRouter/edit/<%=ProductoaEditar.id%>?_method=PUT" method="POST">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input value="<%=ProductoaEditar.name %>" type="text" id="name" name="name" placeholder="Ej: Zapatillas Reebok" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input value="<%=ProductoaEditar.price %>" type="text" id="price" name="price" placeholder="Ej: 5678" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<input value="<%=ProductoaEditar.discount %>" type="text" id="discount" name="discount" placeholder="Ej: 15" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input">
							<option value="">Elegí</option>
							<% if (ProductoaEditar.category=="in-sale") { %>
							<option value="in-sale" selected>En oferta</option>
							<option value="visited" >Últimos agregados</option>
							<% } else { %>
							<option value="in-sale" >En oferta</option>
							<option value="visited" selected>Últimos agregados</option>
							<% } %>
						</select>
					</div>
					<div class="col-12">
						<label for="description" class="form-label">Descipción:</label>
						<textarea name="description" id="description" class="form-input"><%=ProductoaEditar.description %> </textarea>
					</div>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

    <footer class="footer">
        <%- include ('./partials/footer') %>
    </footer> 

</body>	
</html>