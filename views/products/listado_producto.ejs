<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>   
</head>
<body id="fondobody">

    <header id="header">
      <%- include('../partials/header') %>
    </header>

    <main>
        <!-- todos los productos -->
        <div class="container products-wrapper">
            <div class="row">
                <div class="col-12">
                    <h2 class="products-title">Todos los productos</h2>
                </div>
            
                <div class="col-12 col-sm-6 col-lg-3">
                    <% for(let producto of productos) { %>
                        <section class="product-box">
                            <a href="/products/detail/<%=producto.id %>" >
                                <figure class="product-box_image">
                                    <img src="<%=producto.image %>" alt="imagen de producto">
                                </figure>
                                <article class="product-box_data">
                                    <h3>$<%=producto.price %></h3>   <!--cambie h2 x h3 xq sino queda en blanco-->
                                    <span><%=producto.discount %>% OFF</span>
                                    <p><%=producto.name %></p>
                                    <i class="fas fa-truck"></i>
                                </article>
                            </a>
                        </section>
                        <% } %>
                </div>
            
            </div>
        </div>
        <!-- /todos los productos -->
    </main>
    
    <footer class="footer">
        <%- include ('../partials/footer') %>
    </footer> 
    </body>
    </html>